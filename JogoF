
create database jogo;
use jogo;

create table clube (id int primary_key auto_increment, nome varchar(255),sigla varchar(3),escudo varchar(255));

create table jogadores( id int primary_key auto_increment, nome varchar (255), numero_da_camisa varchar (3));
 
create table estadio( id int primary_key auto_increment,nome varchar (255), cidade varchar (255));

Create table Jogos(id bigint Primary key auto_increment, id_mandante bigint, id_visitante bigint, campeonato bigint, data_jg date,
  gols_mandate int, gols_visitante int );

create table rodada(id int primary_key auto_increment,descricao bigint);

alter table jogadores
add column clube id_ckube;

alter table estadio
add column clube id_clube;

alter table jogadores
add fk_clube foreign key (clube) references id_clube on delete no action on update no action;

alter table estadio
add fk_clube foreign key (clube) references id_clube on delete no action on update no action;

alter table jogadores add constraint fk_clube_id foreign key (clube_id) references clube (id)
on delete no action, on update no action;

alter table jogadores modify nome varchar(255),modify numero_camisa (3) not null;

alter table clubes modify nome varchar (255) not null, modify sigla varchar (3) not null unique, modify escudo varchar (255) not null unique;

alter table partidas modify gol_mandante int not null, modify gol_visitante int not null, modify estadio varchar(255) not null;

alter table jogadores_clubes modify contratacao date not null, modify demissao date not null;


alter table estadio modify nome varchar (255) not null;

alter table rodada modify descricao descricao varchar (255) not null;

